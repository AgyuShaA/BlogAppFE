generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tile {
  id              Int            @id @default(autoincrement())
  name            String
  imageUrl        String?
  collectionId    Int?
  outdoorIndoorId Int?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @default(now()) @updatedAt
  collection      Collection?    @relation(fields: [collectionId], references: [id])
  outdoorIndoor   OutdoorIndoor? @relation(fields: [outdoorIndoorId], references: [id])
  colors          TileColor[]
  features        TileFeature[]
  sizes           TileSize[]
  surfaces        TileSurface[]
}

model Collection {
  id    Int    @id @default(autoincrement())
  name  String @unique
  tiles Tile[]
}

model Size {
  id    Int        @id @default(autoincrement())
  name  String     @unique
  tiles TileSize[]
}

model OutdoorIndoor {
  id    Int    @id @default(autoincrement())
  name  String @unique
  tiles Tile[]
}

model Surface {
  id    Int           @id @default(autoincrement())
  name  String        @unique
  tiles TileSurface[]
}

model TileSurface {
  tileId    Int
  surfaceId Int
  surface   Surface @relation(fields: [surfaceId], references: [id])
  tile      Tile    @relation(fields: [tileId], references: [id])

  @@id([tileId, surfaceId])
}

model Color {
  id    Int         @id @default(autoincrement())
  name  String      @unique
  hex   String      @unique
  tiles TileColor[]
}

model Feature {
  id    Int           @id @default(autoincrement())
  name  String        @unique
  tiles TileFeature[]
}

model TileColor {
  tileId  Int
  colorId Int
  color   Color @relation(fields: [colorId], references: [id])
  tile    Tile  @relation(fields: [tileId], references: [id])

  @@id([tileId, colorId])
}

model TileFeature {
  tileId    Int
  featureId Int
  feature   Feature @relation(fields: [featureId], references: [id])
  tile      Tile    @relation(fields: [tileId], references: [id])

  @@id([tileId, featureId])
}

model TileSize {
  tileId Int
  sizeId Int
  size   Size @relation(fields: [sizeId], references: [id])
  tile   Tile @relation(fields: [tileId], references: [id])

  @@id([tileId, sizeId])
}
